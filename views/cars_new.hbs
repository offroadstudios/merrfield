<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>All Cars - Merrfield Motors</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/cars_new.css?v=3">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/t1.png" alt="Merrfield" height="30">
                Merrfield Motors
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cars">Cars</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Filters Section -->
        <div class="filters-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="filters-card">
                            <h5><i class="fas fa-filter"></i> Filter Cars</h5>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Brand</label>
                                    <select class="form-select" id="brandFilter">
                                        <option value="">All Brands</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Body Type</label>
                                    <select class="form-select" id="bodyTypeFilter">
                                        <option value="">All Types</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Hatchback">Hatchback</option>
                                        <option value="Saloon">Saloon</option>
                                        <option value="Estate">Estate</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Price Range</label>
                                    <select class="form-select" id="priceFilter">
                                        <option value="">All Prices</option>
                                        <option value="0-20000">Under £20,000</option>
                                        <option value="20000-30000">£20,000 - £30,000</option>
                                        <option value="30000-40000">£30,000 - £40,000</option>
                                        <option value="40000-50000">£40,000 - £50,000</option>
                                        <option value="50000+">Over £50,000</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Fuel Type</label>
                                    <select class="form-select" id="fuelFilter">
                                        <option value="">All Fuel Types</option>
                                        <option value="Petrol">Petrol</option>
                                        <option value="Diesel">Diesel</option>
                                        <option value="Electric">Electric</option>
                                        <option value="Hybrid">Hybrid</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button class="btn btn-primary" id="applyFilters">
                                        <i class="fas fa-search"></i> Apply Filters
                                    </button>
                                    <button class="btn btn-outline-secondary ms-2" id="clearFilters">
                                        <i class="fas fa-times"></i> Clear All
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cars Grid -->
        <div class="cars-section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 id="resultsCount">Loading cars...</h4>
                            <div class="sort-options">
                                <select class="form-select" id="sortBy">
                                    <option value="price-asc">Price: Low to High</option>
                                    <option value="price-desc">Price: High to Low</option>
                                    <option value="year-desc">Year: Newest First</option>
                                    <option value="mileage-asc">Mileage: Low to High</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row" id="carsGrid">
                    <!-- Cars will be loaded here -->
                </div>
                
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <button class="btn btn-outline-primary" id="loadMoreBtn" style="display: none;">
                            <i class="fas fa-plus"></i> Load More Cars
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Merrfield Motors</h5>
                    <p>Your trusted car dealership for quality vehicles and exceptional service.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 Merrfield Motors. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Contact Modal -->
    <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Book Test Drive</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="testDriveForm">
                        <div class="mb-3">
                            <label for="contactName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="contactName" placeholder="Your full name" required>
                        </div>
                        <div class="mb-3">
                            <label for="contactEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="contactEmail" placeholder="name@example.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="contactPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="contactPhone" placeholder="Your phone number" required>
                        </div>
                        <div class="mb-3">
                            <label for="vehicleInterest" class="form-label">Vehicle of Interest</label>
                            <input type="text" class="form-control" id="vehicleInterest" placeholder="Vehicle details" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="contactMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="contactMessage" rows="3" placeholder="Tell us about your test drive preferences"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="submitTestDrive">Submit Request</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/cars_new.js?v=20"></script>
</body>
</html>
