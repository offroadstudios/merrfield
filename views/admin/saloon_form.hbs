<h2>Add Saloon Car</h2>
<form action="/admin/addsaloon" method="POST">
    <input name="title" placeholder="Title" required>
    <input name="brand" placeholder="Brand" required>
    <input name="year" placeholder="Year" required>
    <input name="price" placeholder="Price" required type="number">
    <input name="fuelType" placeholder="Fuel Type">
    <input name="imagePath" placeholder="Image Path">
    <textarea name="description" placeholder="Description"></textarea>
    <button type="submit">Add Saloon</button>
</form>
<a href="/admin/saloon">Back to Saloon List</a>
