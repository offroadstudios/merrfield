<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{vehicle.title}} - Merryfield Trading Ltd</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap and icons -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/86198f839e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet">
    
    <!-- Custom styles -->
    <link rel="icon" href="/images/auto_favi.ico" type="image/x-icon">
    <link href="/css/vehicle_details.css" rel="stylesheet">
</head>
<body>

    <!-- Vehicle Details Header -->
    <div class="vehicle-header-minimal">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="vehicle-title-minimal">{{vehicle.title}}</h1>
                    <p class="vehicle-subtitle-minimal">{{vehicle.brand}} {{vehicle.model}} • {{vehicle.year}} • £{{vehicle.price}}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Vehicle Details Content -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Vehicle Image -->
                <div class="col-lg-6 mb-4">
                    <div class="vehicle-image-container">
                        {{#if vehicle.images.length}}
                            <div class="image-slider" data-vehicle-id="{{vehicle._id}}">
                                <div class="main-image">
                                    <img src="{{vehicle.imagePath}}?v={{@index}}" alt="{{vehicle.title}}" class="vehicle-main-image lightbox-trigger"
                                         onclick="openLightbox('{{vehicle.imagePath}}?v={{@index}}', '{{vehicle.title}}')"
                                         onerror="this.src='/images/default-car.jpg'" style="cursor: pointer;">
                                </div>
                                {{#if vehicle.images.length}}
                                    <div class="image-thumbnails">
                                        {{#each vehicle.images}}
                                            <img src="{{url}}?v={{@../index}}" alt="{{../title}}" 
                                                 class="thumbnail {{#if isThumbnail}}active{{/if}} lightbox-trigger"
                                                 data-main-src="{{url}}?v={{@../index}}"
                                                 onclick="openLightbox('{{url}}?v={{@../index}}', '{{../title}}')"
                                                 onerror="this.src='/images/default-car.jpg'" style="cursor: pointer;">
                                        {{/each}}
                                    </div>
                                {{/if}}
                            </div>
                        {{else}}
                            <img src="{{vehicle.imagePath}}?v={{@index}}" alt="{{vehicle.title}}" class="vehicle-main-image lightbox-trigger"
                                 onclick="openLightbox('{{vehicle.imagePath}}?v={{@index}}', '{{vehicle.title}}')"
                                 onerror="this.src='/images/default-car.jpg'" style="cursor: pointer;">
                        {{/if}}
                        <div class="price-badge">
                            <span class="price-amount">£{{vehicle.price}}</span>
                        </div>
                    </div>
                </div>

                <!-- Vehicle Information -->
                <div class="col-lg-6">
                    <div class="vehicle-info">
                        <h3 class="section-title">Vehicle Details</h3>
                        
                        <div class="info-grid">
                            <div class="info-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span class="label">Year:</span>
                                <span class="value">{{vehicle.year}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="label">Mileage:</span>
                                <span class="value">{{vehicle.mileage}} miles</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-gas-pump"></i>
                                <span class="label">Fuel Type:</span>
                                <span class="value">{{vehicle.fuelType}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-cog"></i>
                                <span class="label">Transmission:</span>
                                <span class="value">{{vehicle.transmission}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-car"></i>
                                <span class="label">Body Type:</span>
                                <span class="value">{{vehicle.bodyType}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-door-open"></i>
                                <span class="label">Doors:</span>
                                <span class="value">{{vehicle.doors}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-users"></i>
                                <span class="label">Seats:</span>
                                <span class="value">{{vehicle.seats}}</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-palette"></i>
                                <span class="label">Colour:</span>
                                <span class="value">{{vehicle.colour}}</span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons mt-4">
                            <a href="https://wa.me/447123456789?text=Hi, I'm interested in the {{vehicle.title}} ({{vehicle.year}}) for £{{vehicle.price}}" 
                               class="btn btn-success btn-lg mr-3" target="_blank">
                                <i class="fab fa-whatsapp"></i> Contact via WhatsApp
                            </a>
                            <a href="/vehicles/{{vehicle.bodyType}}/book/{{vehicle._id}}" class="btn btn-primary btn-lg">
                                <i class="fas fa-calendar-check"></i> Book Test Drive
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Details -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="additional-details">
                        <h3 class="section-title">Technical Specifications</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="spec-grid">
                                    {{#if vehicle.engineSize}}
                                    <div class="spec-item">
                                        <span class="spec-label">Engine Size:</span>
                                        <span class="spec-value">{{vehicle.engineSize}}L</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.power}}
                                    <div class="spec-item">
                                        <span class="spec-label">Power:</span>
                                        <span class="spec-value">{{vehicle.power}} BHP</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.topSpeed}}
                                    <div class="spec-item">
                                        <span class="spec-label">Top Speed:</span>
                                        <span class="spec-value">{{vehicle.topSpeed}} mph</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.acceleration}}
                                    <div class="spec-item">
                                        <span class="spec-label">0-60 mph:</span>
                                        <span class="spec-value">{{vehicle.acceleration}}s</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.mpg}}
                                    <div class="spec-item">
                                        <span class="spec-label">MPG:</span>
                                        <span class="spec-value">{{vehicle.mpg}}</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.co2Emissions}}
                                    <div class="spec-item">
                                        <span class="spec-label">CO2 Emissions:</span>
                                        <span class="spec-value">{{vehicle.co2Emissions}} g/km</span>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="spec-grid">
                                    {{#if vehicle.tax}}
                                    <div class="spec-item">
                                        <span class="spec-label">Tax:</span>
                                        <span class="spec-value">£{{vehicle.tax}}/year</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.insurance}}
                                    <div class="spec-item">
                                        <span class="spec-label">Insurance Group:</span>
                                        <span class="spec-value">{{vehicle.insurance}}</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.drivetrain}}
                                    <div class="spec-item">
                                        <span class="spec-label">Drivetrain:</span>
                                        <span class="spec-value">{{vehicle.drivetrain}}</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.cylinders}}
                                    <div class="spec-item">
                                        <span class="spec-label">Cylinders:</span>
                                        <span class="spec-value">{{vehicle.cylinders}}</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.previousOwners}}
                                    <div class="spec-item">
                                        <span class="spec-label">Previous Owners:</span>
                                        <span class="spec-value">{{vehicle.previousOwners}}</span>
                                    </div>
                                    {{/if}}
                                    {{#if vehicle.serviceHistory}}
                                    <div class="spec-item">
                                        <span class="spec-label">Service History:</span>
                                        <span class="spec-value">{{vehicle.serviceHistory}}</span>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            {{#if vehicle.description}}
            <div class="row mt-5">
                <div class="col-12">
                    <div class="description-section">
                        <h3 class="section-title">Description</h3>
                        <p class="description-text">{{vehicle.description}}</p>
                    </div>
                </div>
            </div>
            {{/if}}

            <!-- Additional Information -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="additional-info">
                        <h3 class="section-title">Additional Information</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h5><i class="fas fa-info-circle"></i> Vehicle Status</h5>
                                    <div class="info-grid">
                                        {{#if vehicle.status}}
                                        <div class="info-item">
                                            <span class="label">Status:</span>
                                            <span class="value badge badge-success">{{vehicle.status}}</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.stockId}}
                                        <div class="info-item">
                                            <span class="label">Stock ID:</span>
                                            <span class="value">{{vehicle.stockId}}</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.registration}}
                                        <div class="info-item">
                                            <span class="label">Registration:</span>
                                            <span class="value">{{vehicle.registration}}</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.vatStatus}}
                                        <div class="info-item">
                                            <span class="label">VAT Status:</span>
                                            <span class="value">{{vehicle.vatStatus}}</span>
                                        </div>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h5><i class="fas fa-chart-line"></i> Performance & Economy</h5>
                                    <div class="info-grid">
                                        {{#if vehicle.mpg}}
                                        <div class="info-item">
                                            <span class="label">Fuel Economy:</span>
                                            <span class="value">{{vehicle.mpg}} MPG</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.co2Emissions}}
                                        <div class="info-item">
                                            <span class="label">CO2 Emissions:</span>
                                            <span class="value">{{vehicle.co2Emissions}} g/km</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.tax}}
                                        <div class="info-item">
                                            <span class="label">Annual Tax:</span>
                                            <span class="value">£{{vehicle.tax}}</span>
                                        </div>
                                        {{/if}}
                                        {{#if vehicle.insurance}}
                                        <div class="info-item">
                                            <span class="label">Insurance Group:</span>
                                            <span class="value">{{vehicle.insurance}}</span>
                                        </div>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vehicle History -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="history-section">
                        <h3 class="section-title">Vehicle History</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="history-item">
                                    <i class="fas fa-users"></i>
                                    <div class="history-content">
                                        <h6>Previous Owners</h6>
                                        <p>{{vehicle.previousOwners}} previous owner(s)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="history-item">
                                    <i class="fas fa-wrench"></i>
                                    <div class="history-content">
                                        <h6>Service History</h6>
                                        <p>{{vehicle.serviceHistory}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{#if vehicle.motExpiry}}
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="history-item">
                                    <i class="fas fa-calendar-check"></i>
                                    <div class="history-content">
                                        <h6>MOT Expiry</h6>
                                        <p>{{vehicle.motExpiry}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>

            <!-- Price Information -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="price-section">
                        <h3 class="section-title">Pricing Information</h3>
                        <div class="price-card">
                            <div class="price-main">
                                <span class="price-label">Asking Price</span>
                                <span class="price-value">£{{vehicle.price}}</span>
                            </div>
                            {{#if vehicle.priceIndicator}}
                            <div class="price-indicator">
                                <span class="indicator-label">Price Rating:</span>
                                <span class="indicator-value">{{vehicle.priceIndicator}}/5</span>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Merryfield Trading Ltd</h5>
                    <p>Your trusted car dealership for quality vehicles and exceptional service.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/cars">All Cars</a></li>
                        <li><a href="/home">Home</a></li>
                        <li><a href="/admin">Admin</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact</h5>
                    <p>Phone: +44 7123 456 789</p>
                    <p>Email: info@merryfieldtrading.com</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Image Lightbox Modal -->
    <div class="modal fade" id="imageLightbox" tabindex="-1" aria-labelledby="imageLightboxLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-white" id="imageLightboxLabel">Car Image</h5>
                    <button type="button" class="btn-close btn-close-white" id="lightboxCloseBtn" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0 text-center position-relative">
                    <!-- Navigation Buttons -->
                    <button class="btn btn-light lightbox-nav-btn lightbox-prev" id="prevImageBtn" style="display: none;">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="btn btn-light lightbox-nav-btn lightbox-next" id="nextImageBtn" style="display: none;">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    
                    <!-- Main Image -->
                    <img id="lightboxImage" src="" alt="Car Image" class="img-fluid" style="max-height: 80vh; width: auto;">
                    
                    <!-- Image Counter -->
                    <div class="lightbox-counter" id="imageCounter" style="display: none;">
                        <span id="currentImageNum">1</span> / <span id="totalImages">1</span>
                    </div>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-outline-light" id="lightboxCloseBtnFooter">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Lightbox functionality
        let currentVehicleImages = [];
        let currentImageIndex = 0;
        
        function openLightbox(imageUrl, title) {
            const lightboxImage = document.getElementById('lightboxImage');
            const lightboxLabel = document.getElementById('imageLightboxLabel');
            const prevBtn = document.getElementById('prevImageBtn');
            const nextBtn = document.getElementById('nextImageBtn');
            const imageCounter = document.getElementById('imageCounter');
            const currentImageNum = document.getElementById('currentImageNum');
            const totalImages = document.getElementById('totalImages');
            
            // Get all vehicle images from the page
            const vehicleImages = [];
            document.querySelectorAll('.lightbox-trigger').forEach(img => {
                vehicleImages.push(img.src);
            });
            
            currentVehicleImages = vehicleImages;
            currentImageIndex = currentVehicleImages.findIndex(url => url === imageUrl);
            if (currentImageIndex === -1) currentImageIndex = 0;
            
            // Show navigation if multiple images
            if (currentVehicleImages.length > 1) {
                prevBtn.style.display = 'block';
                nextBtn.style.display = 'block';
                imageCounter.style.display = 'block';
                totalImages.textContent = currentVehicleImages.length;
            } else {
                prevBtn.style.display = 'none';
                nextBtn.style.display = 'none';
                imageCounter.style.display = 'none';
            }
            
            // Set the image source and title
            lightboxImage.src = imageUrl;
            lightboxImage.alt = title;
            lightboxLabel.textContent = title;
            currentImageNum.textContent = currentImageIndex + 1;
            
            // Show the lightbox modal
            $('#imageLightbox').modal('show');
        }
        
        // Navigation functions
        function showPrevImage() {
            if (currentVehicleImages.length > 1) {
                currentImageIndex = (currentImageIndex - 1 + currentVehicleImages.length) % currentVehicleImages.length;
                updateLightboxImage();
            }
        }
        
        function showNextImage() {
            if (currentVehicleImages.length > 1) {
                currentImageIndex = (currentImageIndex + 1) % currentVehicleImages.length;
                updateLightboxImage();
            }
        }
        
        function updateLightboxImage() {
            const lightboxImage = document.getElementById('lightboxImage');
            const currentImageNum = document.getElementById('currentImageNum');
            
            if (currentVehicleImages[currentImageIndex]) {
                lightboxImage.src = currentVehicleImages[currentImageIndex] + '&t=' + Date.now();
                currentImageNum.textContent = currentImageIndex + 1;
            }
        }
        
        $(document).ready(function() {
            // Image slider functionality
            $(document).on('click', '.thumbnail', function(e) {
                e.preventDefault();
                
                const $this = $(this);
                const $slider = $this.closest('.image-slider');
                const $mainImg = $slider.find('.main-image img');
                
                // Update main image with cache busting
                const newSrc = $this.data('main-src') + '&t=' + Date.now();
                $mainImg.attr('src', newSrc);
                
                // Update active thumbnail
                $slider.find('.thumbnail').removeClass('active');
                $this.addClass('active');
            });
            
            // Lightbox event listeners
            $('#lightboxCloseBtn, #lightboxCloseBtnFooter').click(function() {
                $('#imageLightbox').modal('hide');
            });
            
            $('#prevImageBtn').click(function() {
                showPrevImage();
            });
            
            $('#nextImageBtn').click(function() {
                showNextImage();
            });
            
            // Close lightbox when clicking outside the image
            $('#imageLightbox .modal-body').click(function(e) {
                if (e.target === this) {
                    $('#imageLightbox').modal('hide');
                }
            });
            
            // Keyboard navigation for lightbox
            $(document).keydown(function(e) {
                if ($('#imageLightbox').hasClass('show')) {
                    if (e.key === 'Escape') {
                        $('#imageLightbox').modal('hide');
                    } else if (e.key === 'ArrowLeft') {
                        showPrevImage();
                    } else if (e.key === 'ArrowRight') {
                        showNextImage();
                    }
                }
            });
        });
    </script>
</body>
</html>
