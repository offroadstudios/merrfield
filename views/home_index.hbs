    <script>
        // Price selection functionality
        function selectPrice(priceRange) {
            // Remove selected class from all buttons
            document.querySelectorAll('.price-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            // Add selected class to clicked button
            document.querySelector(`[data-price="${priceRange}"]`).classList.add('selected');
            
            // Price mapping for filters
            const priceMap = {
                'under-10k': '?maxPrice=10000',
                '10k-20k': '?minPrice=10000&maxPrice=20000',
                '20k-30k': '?minPrice=20000&maxPrice=30000',
                'over-30k': '?minPrice=30000'
            };
            
            // Immediately redirect to filtered cars page
            window.location.href = `/cars${priceMap[priceRange]}`;
        }
        
        // Category browsing
        function browseCategory(category) {
            window.location.href = `/${category}`;
        }
        
        // View car details
        function viewCar(carId) {
            window.location.href = `/cars/details/${carId}`;
        }
        
        // Load featured cars dynamically - most expensive cars at random
        function loadFeaturedCars() {
            console.log('Loading featured cars from database...');
            
            // Get more cars to sort by price and randomize
            fetch('/cars/data?limit=50')
                .then(response => response.json())
                .then(data => {
                    console.log('Cars loaded:', data);
                    // Handle both direct array and nested vehicles array
                    const cars = data.vehicles || data;
                    if (cars && cars.length > 0) {
                        // Sort by price (highest first) and take top 20, then randomize
                        const sortedCars = cars
                            .filter(car => car.price && car.price > 0)
                            .sort((a, b) => b.price - a.price)
                            .slice(0, 20)
                            .sort(() => Math.random() - 0.5) // Randomize the top 20
                            .slice(0, 6); // Take 6 random from the top 20
                        
                        console.log('Featured cars (most expensive):', sortedCars);
                        displayFeaturedCars(sortedCars);
                    }
                })
                .catch(error => {
                    console.error('Error loading cars:', error);
                });
        }
        
        function displayFeaturedCars(cars) {
            const carsContainer = document.getElementById('featuredCars');
            if (!carsContainer) return;
            
            carsContainer.innerHTML = '';
            
            cars.forEach((car, index) => {
                const carCard = createCarCard(car, index);
                carsContainer.appendChild(carCard);
            });
        }
        
        function createCarCard(car, index) {
            const timestamp = Date.now();
            
            // Get the best image for the car
            let imageUrl;
            if (car.imagePath) {
                // Use the main image path
                let processedImagePath = car.imagePath;
                if (processedImagePath.includes('800x600')) {
                    processedImagePath = processedImagePath.replace('800x600', '{resize}');
                }
                imageUrl = `${processedImagePath}?v=${timestamp}`;
            } else if (car.images && car.images.length > 0) {
                // Find the best exterior image
                const exteriorImage = car.images.find(img => img.category === 'Exterior');
                const firstImage = exteriorImage || car.images[0];
                let processedUrl = firstImage.url;
                if (processedUrl.includes('800x600')) {
                    processedUrl = processedUrl.replace('800x600', '{resize}');
                }
                imageUrl = `${processedUrl}?v=${timestamp}`;
            } else {
                // Fallback to logo
                imageUrl = `/images/t1.png?v=${timestamp}`;
            }
            
            // Create badge based on index
            const badges = ['Featured', 'Popular', 'Family', 'Best Value', 'New Arrival', 'Limited'];
            const badge = badges[index] || 'Featured';
            
            // Format price
            const price = car.price ? `£${car.price.toLocaleString()}` : 'POA';
            
            // Create specs
            const specs = [];
            if (car.year) specs.push(car.year);
            if (car.mileage) specs.push(`${car.mileage.toLocaleString()} miles`);
            if (car.fuelType) specs.push(car.fuelType);
            const specsText = specs.join(' • ');
            
            // Create features
            const features = [];
            if (car.seats) features.push(`<span class="feature"><i class="fas fa-users"></i>${car.seats} seats</span>`);
            if (car.transmission) features.push(`<span class="feature"><i class="fas fa-cog"></i>${car.transmission}</span>`);
            if (car.mpg) features.push(`<span class="feature"><i class="fas fa-tachometer-alt"></i>${car.mpg} MPG</span>`);
            
            const carCard = document.createElement('div');
            carCard.className = 'car-card';
            carCard.onclick = () => viewCar(car._id);
            
            carCard.innerHTML = `
                <div class="car-image">
                    <img src="${imageUrl}" alt="${car.title || car.make + ' ' + car.model}" 
                         onerror="this.src='/images/t1.png?v=${timestamp}'">
                    <div class="car-badge">${badge}</div>
                </div>
                <div class="car-info">
                    <h3 class="car-title">${car.title || car.make + ' ' + car.model}</h3>
                    <p class="car-specs">${specsText}</p>
                    <div class="car-price">${price}</div>
                    <div class="car-features">
                        ${features.join('')}
                    </div>
                    <button class="view-btn">View Details</button>
                </div>
            `;
            
            return carCard;
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadFeaturedCars();
        });
    </script>
